<div class="page-header">
	<h1>Imports</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Limit</th>
			<th>Until</th>
			<th>Paging token</th>
			<th>Completed</th>
			<th><%= t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>

	<tbody>
		<% @imports.each do |import| %>
		<tr>
			<td><%= import.limit %></td>
			<td><%= import.until %></td>
			<td><%= import.paging_token %></td>
			<td><%= import.completed ? "yes" : "no" %></td>
			<td>
				<%= link_to t('.import', :default => t("helpers.links.import")),
					run_import_path(import), :class => 'btn btn-mini' %>
				<%= link_to t('.edit', :default => t("helpers.links.edit")),
					edit_import_path(import), :class => 'btn btn-mini' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
					import_path(import),
					:method => :delete,
					:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
					:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Import', new_import_path, :class => 'btn' %>
