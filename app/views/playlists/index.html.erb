<div class="page-header">
	<h1>Playlists</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>USER ID</th>
			<th>NAME</th>
			<th>CREATED AT</th>
			<th><%= t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
		<% @playlists.each do |playlist| %>
		<tr>
			<td><%= link_to playlist.id, playlist_path(playlist) %></td>
			<td><%= playlist.user_id %></td>
			<td><%= playlist.name %></td>
			<td><%= l playlist.created_at %></td>
			<td><%= link_to t('.edit', :default => t("helpers.links.edit")),
			edit_playlist_path(playlist), :class => 'btn btn-mini' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			playlist_path(playlist),
			:method => :delete,
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			:class => 'btn btn-mini btn-danger' %> </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_playlist_path,
:class => 'btn btn-primary' %>
