<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @song.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @song.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:youtube_url) %>:</strong></dt>
  <dd><%= @song.youtube_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mp3_url) %>:</strong></dt>
  <dd><%= @song.mp3_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_url) %>:</strong></dt>
  <dd><%= @song.picture_url %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
