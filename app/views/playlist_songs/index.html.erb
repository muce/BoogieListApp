<%- model_class = PlaylistSong -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:playlist_id) %></th>
      <th><%= model_class.human_attribute_name(:song_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @playlist_songs.each do |playlist_song| %>
      <tr>
        <td><%= link_to playlist_song.id, playlist_song_path(playlist_song) %></td>
        <td><%= playlist_song.playlist_id %></td>
        <td><%= playlist_song.song_id %></td>
        <td><%=l playlist_song.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_playlist_song_path(playlist_song), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      playlist_song_path(playlist_song),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_playlist_song_path,
            :class => 'btn btn-primary' %>
